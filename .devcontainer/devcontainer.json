{
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python", 
                "github.copilot"
            ],
            "settings": {
                "terminal.integrated.shellIntegration.enabled": true,
                "workbench.sideBar.location": "right",
                "git.enableSmartCommit": true,
                "git.confirmSync": false,
                "git.autofetch": true,
                "keyboard.layout": "00000419"
            }
        }
    },
    "postCreateCommand": "sudo DEBIAN_FRONTEND=noninteractive apt update && sudo DEBIAN_FRONTEND=noninteractive apt upgrade -y && pip install --upgrade pip && pip install -r requirements.txt"
}
